FROM node:22.8-alpine
WORKDIR /feedstand

ARG VERSION_TAG
ENV VITE_VERSION_TAG=${VERSION_TAG}

COPY package*.json .
COPY tsconfig.json .
COPY apps/frontend/package.json apps/frontend/
RUN npm ci -s -w apps/frontend --ignore-scripts

COPY apps/frontend apps/frontend/
EXPOSE 4000
CMD ["npm", "run", "dev", "-w", "apps/frontend"]
