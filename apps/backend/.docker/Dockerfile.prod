# Use Debian-based image (not Alpine) - Sentry profiling requires glibc.
FROM node:24-slim
WORKDIR /home/node

ARG VERSION_TAG
ENV VERSION_TAG=${VERSION_TAG}

COPY package*.json .
COPY tsconfig.json .
COPY apps/backend/package.json apps/backend/
# Allow scripts to run - needed to build @sentry/profiling-node native bindings.
RUN npm ci -w apps/backend --only=production

COPY apps/backend apps/backend/
EXPOSE 4001
CMD ["npm", "run", "start", "-w", "apps/backend"]
