{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
  "formatter": {
    "useEditorconfig": true,
    "formatWithErrors": true,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  }
}
