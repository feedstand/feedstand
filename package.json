{
    "name": "feedstand",
    "type": "module",
    "devDependencies": {
        "husky": "^9.1.0",
        "lint-staged": "^15.2.0",
        "prettier": "^3.3.0",
        "prettier-plugin-organize-imports": "^4.1.0",
        "typescript": "^5.6.0"
    },
    "engines": {
        "node": ">=22.8.0",
        "npm": ">=10.8.0"
    },
    "scripts": {
        "prepare": "husky",
        "dev": "docker compose --env-file=apps/backend/.env -f .docker/docker-compose.dev.yml up --build --force-recreate --renew-anon-volumes",
        "dev:fresh": "docker compose --env-file=apps/backend/.env -f .docker/docker-compose.dev.yml down -v --remove-orphans && docker compose --env-file=apps/backend/.env -f .docker/docker-compose.dev.yml up --build --force-recreate",
        "test": "docker compose --env-file=apps/backend/.env -f .docker/docker-compose.test.yml up --build --force-recreate --renew-anon-volumes --abort-on-container-exit",
        "lint": "npm run lint --workspaces --if-present",
        "lint:tsc": "tsc --pretty --noEmit",
        "lint:prettier:base": "prettier --write",
        "lint:prettier": "npm run lint:prettier:base -- ."
    },
    "workspaces": [
        "apps/*"
    ]
}
